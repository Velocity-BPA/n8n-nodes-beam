{
  "name": "n8n-nodes-beam",
  "version": "1.0.0",
  "description": "n8n community node for Beam blockchain - A gaming-focused blockchain built on Avalanche subnet with NFT marketplace, gaming integrations, and Merit Circle ecosystem support",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "beam",
    "blockchain",
    "gaming",
    "nft",
    "web3",
    "merit-circle",
    "sphere",
    "avalanche"
  ],
  "license": "BUSL-1.1",
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-beam",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-beam.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "dist/nodes/Beam/Beam.node.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "prepublishOnly": "pnpm build && pnpm lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/BeamNetwork.credentials.js",
      "dist/credentials/BeamApi.credentials.js",
      "dist/credentials/SphereMarketplace.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Beam/Beam.node.js",
      "dist/nodes/Beam/BeamTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.22.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "ethers": "^6.10.0",
    "graphql-request": "^6.1.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
